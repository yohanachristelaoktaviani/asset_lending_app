<% provide(:title, "Item Detail") %>

  <h1>Item Detail</h1>

  <div class="container10 mt-4 mb-5">
      <table class="table tablestat">
          <tr>
            <th>Code</th>
            <td>:</td>
            <td><%= @user_item.code%></td>
          </tr>
          <tr>
            <th>Name</th>
            <td>:</td>
            <td><%= @user_item.name%></td>
          </tr>
          <tr>
            <th>Type</th>
            <td>:</td>
            <td><%= @user_item.item_type%></td>
          </tr>
          <tr>
            <th>Condition</th>
            <td>:</td>
            <td><%= @user_item.condition%></td>
          </tr>
          <tr>
            <th>Description</th>
            <td>:</td>
            <td class="w-100"><%= simple_format(@user_item.description)%></td>
          </tr>
      </table>
    </div>
  </div>
</div>

