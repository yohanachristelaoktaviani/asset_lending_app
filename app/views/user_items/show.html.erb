<% provide(:title, "Item Detail") %>

  <h1>Item Detail</h1>

  <div class="container8">
  <div class="container-detail-item">
  <div class="image-container mt-4">
    <% if @user_item.image.attached? %>
      <%= image_tag @user_item.image, class:"imageee"%>
    <% else %>
      <%= image_tag 'unknown-item.jpg', class:"imageee" %>
    <% end %>
    </div>

  <div class="container5 mt-4">
    <h3 class="font-item text-nowrap"><%= @user_item.name.upcase %></h3>
      <table class="table tablestat">
          <tr>
            <th>Code</th>
            <td>:</td>
            <td><%= @user_item.code%></td>
          </tr>
          <tr>
            <th>Code</th>
            <td>:</td>
            <td><%= @user_item.code%></td>
          </tr>
          <tr>
            <th>Merk</th>
            <td>:</td>
            <td><%= @user_item.merk%></td>
          </tr>
          <tr>
            <th>Condition</th>
            <td>:</td>
            <td><%= @user_item.condition%></td>
          </tr>
          <tr>
            <th>Description</th>
            <td>:</td>
            <td class="w-100"><%= simple_format(@user_item.description)%></td>
          </tr>
      </table>
    </div>
  </div>
</div>
